<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.n8plus.smarthome.Activity.ChangePassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bgDark"
        android:padding="8dp"></LinearLayout>

    <LinearLayout
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_box"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="16sp"
            android:paddingRight="16sp"
            android:paddingTop="10dp"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4.5"
                android:text="Old Password"
                android:textColor="@color/txtColor1"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/txtOldPass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5.5"
                android:inputType="textPassword"
                android:paddingLeft="8dp"
                android:textAlignment="textStart"
                android:textColor="@color/txtColor3"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="16sp"
            android:paddingRight="16sp"
            android:paddingTop="10dp"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4.5"
                android:text="New Password"
                android:textColor="@color/txtColor1"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/txtNewPass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5.5"
                android:inputType="textPassword"
                android:paddingLeft="8dp"
                android:textAlignment="textStart"
                android:textColor="@color/txtColor3"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="16sp"
            android:paddingRight="16sp"
            android:paddingTop="10dp"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4.5"
                android:text="Cofirm New Password"
                android:textColor="@color/txtColor1"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/txtIDname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="5.5"
                android:inputType="textPassword"
                android:paddingLeft="8dp"
                android:textAlignment="textStart"
                android:textColor="@color/txtColor3"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:background="@drawable/btn_custom"
        android:text="Confirm"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

</LinearLayout>
