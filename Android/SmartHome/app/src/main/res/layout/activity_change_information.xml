<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.ProfilePage.ChangeInformation.ChangeInformation">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@color/bgDark"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/lnPicture"
                android:paddingLeft="16dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/border_box"
                android:weightSum="10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:text="Profile Picture"
                    android:layout_weight="6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:padding="4dp"
                    android:id="@+id/imgPicture"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:src="@drawable/login"
                    android:layout_width="0dp"
                    android:layout_height="100dp" />
            </LinearLayout>
            <LinearLayout
                android:padding="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></LinearLayout>
            <LinearLayout
                android:id="@+id/lnID"
                android:background="@drawable/border_box"
                android:weightSum="10"
                android:paddingLeft="16sp"
                android:paddingRight="8sp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/txtColor1"
                    android:textSize="16sp"
                    android:text="ID Name"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtIDname"
                    android:paddingRight="8dp"
                    android:textAlignment="textEnd"
                    android:textColor="@color/txtColor3"
                    android:textSize="16sp"
                    android:text="Anonymous"
                    android:layout_weight="7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/forward"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lnPhoneNumber"
                android:background="@drawable/border_box"
                android:weightSum="10"
                android:paddingLeft="16sp"
                android:paddingRight="8sp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/txtColor1"
                    android:textSize="16sp"
                    android:text="Phone Number"
                    android:layout_weight="3.2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtPhoneNumber"
                    android:paddingRight="8dp"
                    android:textAlignment="textEnd"
                    android:textColor="@color/txtColor3"
                    android:textSize="16sp"
                    android:text="0123456789"
                    android:layout_weight="5.8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/forward"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lnEmail"
                android:background="@drawable/border_box"
                android:weightSum="10"
                android:paddingLeft="16sp"
                android:paddingRight="8sp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/txtColor1"
                    android:textSize="16sp"
                    android:text="Email"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtEmail"
                    android:paddingRight="8dp"
                    android:textAlignment="textEnd"
                    android:textColor="@color/txtColor3"
                    android:textSize="16sp"
                    android:text="chung3396@gmail.com"
                    android:layout_weight="7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/forward"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lnLocation"
                android:background="@drawable/border_box"
                android:weightSum="10"
                android:paddingLeft="16sp"
                android:paddingRight="8sp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/txtColor1"
                    android:textSize="16sp"
                    android:text="Account Location"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtLocation"
                    android:paddingRight="8dp"
                    android:textAlignment="textEnd"
                    android:textColor="@color/txtColor3"
                    android:textSize="16sp"
                    android:text="Viet nam"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/imgAL"
                    android:layout_gravity="center"
                    android:src="@drawable/forward"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
